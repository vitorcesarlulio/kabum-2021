{
  "routes": [
    {
      "path": "/json-test",
      "method": "GET",
      "name": "json",
      "callback": "PlugRoute\\Example\\Home@example"
    },
    {
      "path": "/json/{anything}",
      "method": "GET",
      "middlewares": [
        "Middleware1",
        "Middleware2"
      ],
      "callback": "PlugRoute\\Example\\Home@anything"
    },
    {
      "group": {
        "prefix": "/sports",
        "middlewares": [
          "Middleware1",
          "Middleware2"
        ],
        "routes": [
          {
            "path": "/xadrez",
            "method": "GET",
            "callback": "PlugRoute\\Example\\Home@rankingXadrez"
          },
          {
            "group": {
              "prefix": "/f1",
              "routes": [
                {
                  "path": "/ranking",
                  "method": "GET",
                  "callback": "PlugRoute\\Example\\Home@rankingF1"
                }
              ]
            }
          },
          {
            "group": {
              "prefix": "/soccer",
              "middlewares": [
                "MiddlewareSoccer"
              ],
              "namespace": "PlugRoute\\",
              "routes": [
                {
                  "path": "/champions-league",
                  "method": "GET",
                  "callback": "Example\\Home@rankingChampions"
                },
                {
                  "path": "/europe-league",
                  "method": "GET",
                  "callback": "Example\\Home@rankingEurope"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}